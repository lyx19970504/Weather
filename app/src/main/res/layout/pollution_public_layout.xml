<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="24sp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="发布污染源信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/belong_city"
        android:layout_marginStart="32dp"
        android:layout_gravity="start"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:text="污染源所属城市:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/publish_date"
        android:layout_marginStart="32dp"
        android:layout_gravity="start"
        android:layout_marginTop="23dp"
        android:textSize="18sp"
        android:text="报表时间:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/pollution_spinner"
        android:layout_margin="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:smsp_baseColor="@color/bottom_bg"
        app:smsp_floatingLabelColor="@color/colorAccent"
        app:smsp_highlightColor="@color/colorPrimary"
        app:smsp_hint="请选择污染类型"
        app:smsp_hintColor="@color/severe_pollution"
        app:smsp_hintTextSize="14sp"
        app:smsp_showEmptyDropdown="true"/>

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/level_spinner"
        android:layout_margin="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:smsp_baseColor="@color/bottom_bg"
        app:smsp_floatingLabelColor="@color/colorAccent"
        app:smsp_highlightColor="@color/colorPrimary"
        app:smsp_hint="请选择受污染程度"
        app:smsp_hintColor="@color/severe_pollution"
        app:smsp_hintTextSize="14sp"
        app:smsp_showEmptyDropdown="true"/>


    <RelativeLayout
        android:layout_margin="42dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:text="确定"
            android:id="@+id/confirm"
            android:layout_alignParentStart="true"
            android:background="@drawable/topic_detailed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cancel"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:text="取消"
            android:layout_alignParentEnd="true"
            android:background="@drawable/topic_detailed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>