<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tomorrow"
            android:textStyle="bold"
            android:text="明天"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.v7.widget.CardView
            app:layout_constraintLeft_toRightOf="@+id/tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="4dp"
            android:alpha="0.8">
            <TextView
                android:padding="2dp"
                android:id="@+id/air_condition_1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/temp_1"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tomorrow"/>

        <ImageView
            android:id="@+id/weather_image_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/weather_condition_1"
            android:layout_marginRight="6dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_image_1"/>
        <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/black"
            android:alpha="0.1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:background="@android:color/black"
        android:alpha="0.1"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/after_tomorrow"
            android:text="后天"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.v7.widget.CardView
            app:layout_constraintLeft_toRightOf="@+id/after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="8dp"
            android:alpha="0.8">
            <TextView
                android:id="@+id/air_condition_2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/temp_2"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/after_tomorrow"/>

        <ImageView
            android:id="@+id/weather_image_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/weather_condition_2"
            android:layout_marginRight="6dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_image_2"/>
        <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/black"
            android:alpha="0.1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>


